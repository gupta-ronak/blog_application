<h1>New Article</h1>

<%= form_with model: @article,url: "/article/create", method: :post do |form|%>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title%>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit%>
  </div>

<% end %>
